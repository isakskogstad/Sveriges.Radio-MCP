# Sveriges Radio MCP Server - Environment Variables
# Copy this file to .env and configure as needed

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Port for HTTP server (default: 3000)
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# ===========================================
# AUTHENTICATION (Optional)
# ===========================================

# Bearer token for MCP authentication
# Leave empty for public access (recommended for SR API)
# If set, all MCP endpoint requests must include:
# Authorization: Bearer YOUR_TOKEN_HERE
MCP_AUTH_TOKEN=

# ===========================================
# CORS CONFIGURATION
# ===========================================

# Allowed CORS origins (comma-separated)
# Use * for all origins (development) or specific domains (production)
# Example: https://claude.ai,https://your-app.com
ALLOWED_ORIGINS=*

# ===========================================
# SESSION MANAGEMENT
# ===========================================

# Session timeout in milliseconds (default: 1800000 = 30 minutes)
SESSION_TTL_MS=1800000

# ===========================================
# RATE LIMITING
# ===========================================

# Maximum requests per minute per IP address
RATE_LIMIT_REQUESTS=60

# ===========================================
# SR API CONFIGURATION
# ===========================================

# Timeout for SR API requests in milliseconds (default: 8000)
SR_API_TIMEOUT_MS=8000

# ===========================================
# LOGGING
# ===========================================

# Log level: debug, info, warn, error
LOG_LEVEL=info
